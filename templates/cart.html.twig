{% extends 'base.html.twig' %}

{% block body %}
<h1>Your Cart</h1>

{% if cartItems is empty %}
    <p>Your cart is empty.</p>
{% else %}
    <form action="{{ path('checkout') }}" method="post" id="checkoutForm">
        <input type="hidden" name="cart_id" value="{{ cartId }}">
        <table>
            <thead>
                <tr>
                    <th>Flower</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in cartItems %}
                    {% set flower = flowers|filter(f => f.id == item.flowerId)|first %}
                    {% set storage = storages|filter(s => s.flowerId == item.flowerId)|first %}
                    <tr data-flower-id="{{ flower.id }}">
                        <td>{{ flower.name }}</td>
                        <td class="price">{{ flower.price }}</td>
                        <td>
                            {% if storage and storage.amount > 0 %}
                                <input 
                                    type="number" 
                                    class="quantity" 
                                    name="items[{{ loop.index0 }}][amount]" 
                                    min="1" 
                                    max="{{ storage.amount }}" 
                                    data-price="{{ flower.price }}" 
                                    data-id="{{ flower.id }}">
                                <input type="hidden" name="items[{{ loop.index0 }}][flower_id]" value="{{ flower.id }}">
                                <p>Available: {{ storage.amount }}</p>
                            {% else %}
                                <input 
                                    type="number" 
                                    class="quantity" 
                                    value="0" 
                                    disabled>
                                <p style="color: red;">Out of stock</p>
                            {% endif %}
                        </td>
                        <td class="total">{{ (1 * flower.price)|number_format(2) }}</td>
                        <td>
                            <button type="button" class="remove-item-btn" data-id="{{ flower.id }}">Remove</button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div>
            <strong>Grand Total: $<span id="grandTotal">0.00</span></strong>
        </div>
        <button type="submit" class="btn btn-primary">Checkout</button>
    </form>
{% endif %}

<a href="{{ path('catalog') }}" class="btn btn-secondary">Back to Catalog</a>
{% endblock %}
