{% extends 'base.html.twig' %}

{% block title %}Your Cart{% endblock %}

{% block body %}
<h1>Your Cart</h1>

{% if cartItems is empty %}
    <p>Your cart is empty.</p>
{% else %}
    <ul>
        {% for item in cartItems %}
            {% set flower = flowers[item.id] %}
            <li>{{ flower.name }} - Quantity: {{ item.amount }}</li>
        {% endfor %}
    </ul>
{% endif %}

<a href="{{ path('catalog') }}" class="btn btn-secondary">Back to Catalog</a>
{% endblock %}
