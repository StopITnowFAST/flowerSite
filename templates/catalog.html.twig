{% extends 'base.html.twig' %}

{% block title %}Catalog{% endblock %}

{% block body %}
<h1>Catalog</h1>

<div class="catalog">
    {% for flower in flowers %}
        <div class="catalog-item">
            <h2>{{ flower.name }}</h2>
            <p>{{ flower.description }}</p>
            {% if flower.imagePath %}
                <img src="{{ asset(flower.imagePath) }}" alt="{{ flower.name }}" class="flower-image">
            {% else %}
                <p>No image available</p>
            {% endif %}
            
            <!-- Форма для добавления товара в корзину -->
            <form action="{{ path('add_to_cart', {'id': flower.id}) }}" method="post">
                <button type="submit" class="btn btn-primary">Add to Cart</button>
            </form>
        </div>
    {% endfor %}
</div>

<!-- Кнопка для перехода в корзину -->
<div class="cart-link">
    <a href="{{ path('view_cart') }}" class="btn btn-secondary">Go to Cart</a>
</div>

{% endblock %}
