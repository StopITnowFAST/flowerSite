{% extends 'base.html.twig' %}

{% block body %}
<h1>Order List</h1>

<table border="1" cellpadding="10">
    <thead>
        <tr>
            <th>ID</th>
            <th>Order ID</th>
            <th>Flower</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.orderId }}</td>
                <td>
                    {{ flowerNames[order.flowerId] is defined ? flowerNames[order.flowerId] : 'Unknown Flower' }}
                </td>
                <td>{{ order.amount }}</td>
                <td>
                    {% if order.status == 0 %}
                        Completed
                    {% elseif order.status == 1 %}
                        Pending
                    {% elseif order.status == 2 %}
                        Canceled
                    {% else %}
                        Unknown
                    {% endif %}
                </td>
                <td>{{ order.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No orders found</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
